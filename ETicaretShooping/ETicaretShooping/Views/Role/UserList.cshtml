@model List<Entities.Concrete.AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_UIAdminPanelLayout.cshtml";
}

<h3>Kullanıcı Listesi</h3>
<hr />

<table class="table table-striped">
    <tr>
        <th>Kullanıcı Adı</th>
        <th>Rol Ata</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td><a href="/Role/AssignRole2/@item.Id" class="btn btn-outline-primary">Rol Ata</a></td>
        </tr>
    }
</table>