}

<!DOCTYPE html>
<html lang="en">

@await Html.PartialAsync("/Views/UILayoutPartial/_HeaderPartial.cshtml")

<body>
    <!-- Topbar Start -->
    @await Html.PartialAsync("/Views/UILayoutPartial/_NavbarTopPartial.cshtml")
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <div class="container-fluid">
        <div class="row border-top px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a class="btn shadow-none d-flex align-items-center justify-content-between bg-primary text-white w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; margin-top: -1px; padding: 0 30px;">
                    <h6 class="m-0">KATEGORİLER</h6>
                    <i class="fa fa-angle-down text-dark"></i>
                </a>
                <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 1;">
                    <div class="navbar-nav w-100 overflow-hidden" style="height: 410px">
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link" data-toggle="dropdown">Koleksiyonlar <i class="fa fa-angle-down float-right mt-1"></i></a>
                            <div class="dropdown-menu position-absolute bg-secondary border-0 rounded-0 w-100 m-0">
                                <a href="" class="dropdown-item">Kadın Giyim</a>
                                <a href="" class="dropdown-item">Erkek Giyim</a>
                                <a href="" class="dropdown-item">Çocuk Giyim</a>
                            </div>
                        </div>
                        <a href="" class="nav-item nav-link">TShirts & Bluz</a>
                        <a href="" class="nav-item nav-link">Sweatshirt</a>
                        <a href="" class="nav-item nav-link">Gömlek</a>
                        <a href="" class="nav-item nav-link">Hırka</a>
                        <a href="" class="nav-item nav-link">Pantolon</a>
                        <a href="" class="nav-item nav-link">Jean</a>
                        <a href="" class="nav-item nav-link">Elbise</a>
                        <a href="" class="nav-item nav-link">Ceket</a>
                        <a href="" class="nav-item nav-link">Kaban</a>
                        <a href="" class="nav-item nav-link">Mont</a>
                    </div>
                </nav>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Shopper</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a href="/Anasayfa/Index" class="nav-item nav-link">Anasayfa</a>
                            <a href="/ProductDetail/List" class="nav-item nav-link">Ürünler</a>
                            <a href="detail.html" class="nav-item nav-link active">Sepetim</a>
                            @*<div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Pages</a>
                                    <div class="dropdown-menu rounded-0 m-0">
                                        <a href="cart.html" class="dropdown-item">Shopping Cart</a>
                                        <a href="checkout.html" class="dropdown-item">Checkout</a>
                                    </div>
                                </div>*@
                            <a href="contact.html" class="nav-item nav-link">İletişim</a>
                        </div>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"> Merhaba @User.Identity.Name</a>
                                <div class="dropdown-menu rounded-0 m-0">
                                    @if (User.HasClaim(x => x.Value == "Admin"))
                                    {
                                        <a href="/Admin/Profile/Index" class="dropdown-item">Kullanıcı Paneline Git</a>
                                    }
                                    else
                                    {
                                        <a href="/Member/Profile/Index" class="dropdown-item">Kullanıcı Paneline Git</a>
                                    }

                                    <a href="/Login/LogOut/" class="dropdown-item">Çıkış Yap</a>

                                </div>
                            </div>

                        }
                        else
                        {
                            <div class="navbar-nav ml-auto py-0">
                                <a href="/Login/SignIn/" class="nav-item nav-link">Üye Girişi</a>
                                <a href="/Login/SignUp/" class="nav-item nav-link">Üye Ol</a>
                            </div>
                        }

                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- Navbar End -->


    @RenderBody()

    <!-- Footer Start -->
    @await Html.PartialAsync("/Views/UILayoutPartial/_FooterPartial.cshtml")

    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>

    @await Html.PartialAsync("/Views/UILayoutPartial/_ScriptPartial.cshtml")


