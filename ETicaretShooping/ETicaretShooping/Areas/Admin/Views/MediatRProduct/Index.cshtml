@model List<ETicaretShooping.CQRS.Results.OrderResult.GetAllOrderQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UIAdminPanelLayout.cshtml";
    int count = 0;
}


<h4> MediatR ile Sipariş Listesi</h4>
<hr />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Sipariş No</th>
        <th>Kullanıcı Id</th>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Tarih</th>
        <th>Adres</th>
        <th>Şehir</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.OrderNo</td>
            <td>@item.AppUserId</td>
            <td>@item.ProductId</td>
            <td>@item.ProductPrice</td>
            <td>@item.Quantity</td>
            <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
            <td>@item.Address</td>
            <td>@item.City</td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/MediatRProduct/GetGuides/@item.OrderId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Admin/MediatRProduct/AddGuide/" class="btn btn-outline-primary">Sipariş Oluştur</a>
