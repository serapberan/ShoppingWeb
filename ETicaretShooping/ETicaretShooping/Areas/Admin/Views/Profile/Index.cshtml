@model ETicaretShooping.Areas.Admin.Models.UserEditProfileViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UIAdminPanelLayout.cshtml";
}

<p>
    <h4 style="color:darkblue"> Profil Düzenleme Sayfası</h4>
    <hr class="border-info" />
</p>
<br />
<form method="post" enctype="multipart/form-data">
        @Html.Label("Adınız")
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        @Html.Label("Soyadınız")
        <input type="text" asp-for="Surname" class="form-control" />
        <br />
        @Html.Label("Mail Adresiniz")
        <input type="text" asp-for="Email" class="form-control" />
        <br />
        @Html.Label("Telefon Numarası")
        <input type="text" asp-for="Phonenumber" class="form-control" />
        <br />
        @Html.Label("Şifreniz")
        <input type="text" asp-for="Password" class="form-control" />
        <br />
        @Html.Label("Şifre Tekrar")
        <input type="text" asp-for="ConfirmPassword" class="form-control" />
        <br />

        <div class="form-group">
            <label>Resim Seçiniz</label>
            <input type="file" asp-for="Image" />
        </div>
        <br />
        <button class="btn btn-primary">Bilgileri Güncelle</button>
    </form>


