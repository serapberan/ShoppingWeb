@model List<Entities.Concrete.AppUser>
@{
    ViewData["Title"] = "RegisterUserList";
    Layout = "~/Views/Shared/_UIAdminPanelLayout.cshtml";
    int siraNo = 0;
}

<p>
    <h4 style="color:darkblue"> Kayıtlı Kullanıcı Listesi</h4>
    <hr class="border-info" />
</p>

<a asp-action="Add" class="btn btn-primary"><i class="bi bi-trash3-fill"></i>Yeni Kullanıcı Ekle</a>
<br />

<style>
    img {
        border-radius: 50%;
    }
</style>

<table class="table table-striped table-bordered" id="myTable">
    <thead>
        <tr>
            <th>Sıra No</th>
            <th>Resim</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Rolü</th>
            <th>Alışverişleri</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @{siraNo = siraNo + 1; }
                <td>@siraNo</td>
                <td> <img src="~/userimages/@item.ImageURL" width="50" height="50" /> </td>
                <td> @item.Name </td>
                <td> @item.Surname </td>
                <td> @item.UserName </td>
                <td> @item.Email </td>
                <td> @item.Status </td>
                <td>
                   
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash3-fill"></i> Sil</a>
                    <a asp-action="DeliveredUserList" asp-route-id="@item.Id" class="btn btn-primary"><i class="bi bi-trash3-fill"></i> Alışveriş Geçmişi</a>
                </td>
            </tr>
        }
    </tbody>
</table>
