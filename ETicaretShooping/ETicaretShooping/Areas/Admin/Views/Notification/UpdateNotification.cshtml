@model DTO.DTOs.NotificationDTOs.NotificationUpdateDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/Shared/_UIAdminPanelLayout.cshtml";
}



<h3>Bilgilendirme Güncelleme Sayfası</h3>

<form method="post">
    <input type="hidden" asp-for="NotificationsId" />
    <label>Duyuru Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Duyuru İçeriği</label>
    <input type="text" asp-for="Content" class="form-control" />
    <br />
    <button class="btn btn-outline-primary">Duyuruyu Güncelle</button>
</form>