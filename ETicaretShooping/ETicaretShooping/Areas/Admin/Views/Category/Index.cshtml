
@model List<Entities.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UIAdminPanelLayout.cshtml";
}

<div class="container">
    <p>
        <h4 style="color:darkblue"> KATEGORİLER</h4>
        <hr class="border-info" />
        <a asp-action="AddCategory" class="btn btn-primary">Kategori Ekle</a>
    </p>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th>  Kategori Adı  </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.Name</td>
                    <td>
                        <a asp-action="CategoryUpdate" asp-route-id="@item.CategoryId"  class="btn btn-success"><i class="bi bi-pencil-square"></i> Düzenle</a> |
                        <a  asp-route-id="@item.CategoryId" class="btn btn-danger"><i class="bi bi-trash3-fill"></i> Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>











