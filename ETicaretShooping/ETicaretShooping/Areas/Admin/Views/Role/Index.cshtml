@model List<Entities.Concrete.AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UIAdminPanelLayout.cshtml";
    int siraNo = 0;
}

<h3>Rol Listesi</h3>
<br />
<a asp-action="AddRole" asp-route-id="" class="btn btn-success"><i class="bi bi-pencil-square"></i> Yeni Rol Ekle</a>

<table class="table table-striped table-bordered" id="myTable">
    <thead>
        <tr>
            <th>Sıra No</th>
            <th>Rol Adı</th>
            <th> </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @{siraNo = siraNo + 1; }
                <td>@siraNo</td>
                <td> @item.Name </td>
                <td>
                    <a asp-action="UpdateRole" asp-route-id="@item.Id" class="btn btn-outline-primary"><i class="bi bi-trash3-fill"></i> Güncelle</a>
                    <a asp-action="DeleteRol" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash3-fill"></i> Sil</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>