@model List<Entities.Concrete.AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_UIAdminPanelLayout.cshtml";
}

<h3>Kullanıcı Listesi</h3>
<hr />

<table class="table table-striped">
    <tr>
        <th>Kullanıcı Adı</th>
        <th>Rolü</th>
        <th>Rol Ata</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td><user-role-names user-id="@item.Id"></user-role-names ></td>
            <td><a href="/Admin/Role/AssingRole/@item.Id" class="btn btn-primary">Rol Ata</a></td>
        </tr>
    }
</table>