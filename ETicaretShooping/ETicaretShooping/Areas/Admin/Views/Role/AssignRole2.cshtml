@model List<ETicaretShooping.Models.RoleAssingViewModel>
@{
    ViewData["Title"] = "AssignRole2";
    Layout = "~/Views/Shared/_UIAdminPanelLayout.cshtml";
}


<h3>Rol Atama İşlemleri</h3>
<hr />
<form method="post" asp-route="@TempData["UserId"]">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].Exists" />
            <label class="form-check-label">@Model[i].Name</label>
        </div>
    }
    <button class="btn btn-warning">Rol Düzenle</button>
</form>
