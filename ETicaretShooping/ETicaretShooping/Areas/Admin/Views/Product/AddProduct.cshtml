@model Entities.Concrete.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_UIAdminPanelLayout.cshtml";
}

<h4 class="text-success">Ürün Ekleme Sayfası</h4>
<hr class="border-info" />

<form method="post" enctype="multipart/form-data">
    @Html.Label("Ürün Adı")
    <input type="text" asp-for="Name" class="form-control" />
    <br />

    @Html.Label("Kategorisi")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklaması")
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    @Html.Label("Fiyatı")
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    @Html.Label("Stok")
    <input type="text" asp-for="Stock" class="form-control" />
    <br />
    <br />
    <div class="form-group">
        <input type="checkbox" class="form-check-input" asp-for="Approved" /> AppRoved
    </div>
    <br />
    <div class="form-group">
        <input type="checkbox" class="form-check-input" asp-for="Popular" /> Popüler
    </div>
    <br />

    <div class="form-group">
        <label>Resim Seçiniz</label>
        <input type="file" asp-for="Image" />
    </div>
    <br />
    <a href="/AdminTemplate/Product/Index" class="btn btn-primary">Yeni Ürün Ekle </a>
</form>




